@page "/login"

<PageTitle>Login</PageTitle>

<BaseForm TRequest="AuthRequest"
          TResponse="Response<AuthData>"
          Title="Login"
          NavTitle="Register"
          ButtonNavigateTo="/register"
          SubmitNavigateTo="/"
          Request="@Request"
          Response="@Response">
    <Content Context="request">
        <Entry @bind-Value="request.Email"
               Label="Email"
               Type="email"
               AutoComplete="email" />
        <Entry @bind-Value="request.Password"
               Label="Password"
               Type="password"
               AutoComplete="current-password" />
    </Content>
</BaseForm>