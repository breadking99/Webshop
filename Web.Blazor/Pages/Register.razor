@page "/register"

<PageTitle>Register</PageTitle>

<BaseForm TRequest="AuthRequest"
          TResponse="Response<AuthData>"
          Title="Register"
          NavTitle="Login"
          ButtonNavigateTo="/login"
          SubmitNavigateTo="/"
          Request="@Request"
          Response="@Response">
    <Content Context="request">
        <Entry @bind-Value="request.Email"
               Label="Email"
               Type="email"
               AutoComplete="email" />
        <Entry @bind-Value="request.Password"
               Label="Password"
               Type="password"
               AutoComplete="new-password" />
        <Entry @bind-Value="request.ConfirmPassword"
               Label="Confirm Password"
               Type="password"
               AutoComplete="new-password" />
    </Content>
</BaseForm>
